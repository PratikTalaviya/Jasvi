<%- include('../Header.ejs');-%>
    <div class="main-content container-fluid">
        <div class="page-title mb-3">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Edit Product</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <div class="d-flex justify-content-end">
                        <a href="/admin/AllColor" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
        <form class="section" action="/admin/EditColorAction/<%= data._id %> " method="POST" enctype="multipart/form-data">
            <input type="hidden" value="affiliate" name="item_type">
            <%if (message.length> 0) {%>
                <div class="alert alert-dismissible"
                    style="background:green;border-style: solid; border-color:green; border-width:1px; color: #fff;">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>Error!</strong>
                    <%= message %>
                </div>
                <% } %>
                    <%if(error.length> 0) {%>
                        <div class="alert alert-dismissible"
                            style="background:#fd7c7c;border-style: solid; border-color:#e64b4b; border-width:1px; color: #fff;">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Error!</strong>
                            <%= error %>
                        </div>
                        <% } %>
                            <div class="row">
                                <div class="col-12 col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="form form-vertical">
                                                <div class="form-body">
                                                    <div class="row flex-column">
                                                        <div class="col-8">
                                                            <div class="col-lg-12 mb-1">
                                                                <fieldset class="form-group">
                                                                    <label for="basicSelect">Select Category</label>
                                                                    <select name="item_id" class="form-select" required>
                                                                        <option value="">Select One</option>
                                                                        <% item.forEach(function(row){ %>
                                                                            <option value="<%=row._id%>">
                                                                                <%=row?.title%>
                                                                            </option>
                                                                            <%})%>
                                                                    </select>
                                                                </fieldset>
                                                            </div>
                                                            <div class="form-group mb-3">
                                                                <h6 class="mb-1">Featured Image</h6>
                                                                <div class="preview-zone">
                                                                    <div class="box box-solid">
                                                                        <div class="box-body">
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <div class="input-group mb-3 dropzone-wrapper">
                                                                    <input type="file"
                                                                        class="form-control bg-white dropzone"
                                                                        id="inputGroupFile02" name="photo"
                                                                        placeholder="choose images" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-lg-12 mb-1">
                                                                <div class="form-group">
                                                                    <label for="password">Color</label>
                                                                    <div class="input-group mb-3">
                                                                        <input type="text" name="color"
                                                                            class="form-control"
                                                                            placeholder="Enter Color">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <h6 class="mb-2">Gallery Images</h6>
                                                                <div class="preview-zone">
                                                                    <div class="box box-solid">
                                                                        <div class="box-body">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="input-group mb-3 dropzone-wrapper">
                                                                    <input type="file"
                                                                        class="form-control bg-white dropzone"
                                                                        id="inputGroupFile02" name="galleries"
                                                                        placeholder="choose images" multiple required>
                                                                </div>
                                                            </div>

                                                            <div class="col-12">
                                                                <button type="submit"
                                                                    class="btn btn-primary me-1 mb-1">Save</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
        </form>
    </div>



    <%- include('../Footer')-%>