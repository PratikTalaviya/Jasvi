<%- include('../Header.ejs');-%>
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Review Details</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <div class="d-flex justify-content-end">
                        <a href="/ProductReviews" class="btn btn-secondary"> Back</a>
                </div>
            </div>
        </div>
    </div>
    <%if (message.length > 0) {%>
      <div class="alert alert-dismissible" style="background:#5bc093;border-style: solid;  border-color:#55a682; border-width:1px; color: #fff;">
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          <strong>Message!</strong> <%= message %>
      </div>
    <% } %>
    <%if(error.length > 0) {%>
        <div class="alert alert-dismissible" style="background:#fd7c7c;border-style: solid;  border-color:#e64b4b; border-width:1px; color: #fff;">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Error!</strong> <%= error %>
        </div>
    <% } %>	
    <section class="section">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table">
                              <tbody>
                                <% reviewdata.forEach(function(review){ %>
                                <tr>
                                  <td class="text-bold-500"><b>First Name</b> </td>
                                  <td class="text-bold-500"><%= review?.first_name %></td>
                                </tr>
                                <tr>
                                  <td class="text-bold-500"><b>Last Name</b></td>
                                  <td class="text-bold-500"><%= review?.last_name %></td>
                                </tr>
                                <tr>
                                  <td class="text-bold-500"><b>Email Address</b></td>
                                  <td mailto:class="text-bold-500"><%= review?.email %></td>
                                </tr>
                                <tr>
                                  <td class="text-bold-500"><b>Phone Number</b></td>
                                  <td class="text-bold-500"><%= review?.phone %></td>
                                </tr>
                                <tr>
                                  <td class="text-bold-500"><b>Country Name</b></td>
                                  <td class="text-bold-500"></td>
                                </tr>
                                <tr>
                                  <td class="text-bold-500"><b>Rating</b></td>
                                  <td class="text-bold-500"><%= review?.rating %></td>
                                </tr>
                                <tr>
                                  <td class="text-bold-500"><b>Review</b></td>
                                  <td class="text-bold-500"><%= review?.review %></td>
                                </tr>
                                <% }) %>
                              </tbody>
                            </table>
                          </div>
                    </div>
                  </div>
            </div>
        </div>
    </section>
</div>


<%- include('../Footer.ejs')-%>
