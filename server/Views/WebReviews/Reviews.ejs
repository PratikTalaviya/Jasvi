<%- include('../Header.ejs');-%>
    <div class="main-content container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3 style="margin-bottom: 20px;">Product Reviews</h3>
                </div>
                <!-- <div class="col-12 col-md-6 order-md-2 order-first">
                <div class="d-flex justify-content-end">
                        <a href="/AddCategories" class="btn btn-secondary"> Add</a>
                </div>
            </div> -->
            </div>
        </div>
        <%if (message.length> 0) {%>
            <div class="alert alert-dismissible"
                style="background:#5bc093;border-style: solid;  border-color:#55a682; border-width:1px; color: #fff;">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Message!</strong>
                <%= message %>
            </div>
            <% } %>
                <%if(error.length> 0) {%>
                    <div class="alert alert-dismissible"
                        style="background:#fd7c7c;border-style: solid;  border-color:#e64b4b; border-width:1px; color: #fff;">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>Error!</strong>
                        <%= error %>
                    </div>
                    <% } %>
                        <section class="section">
                            <div class="card">
                                <div class="card-body">
                                    <table class='table table-striped' id="category-table" style="width:100%">
                                        <thead class="head-tbl">
                                            <tr>
                                                <th>Name</th>
                                                <th>Product</th>
                                                <th>Rating</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-decorate">
                                            <% data.forEach(function(review){ %>
                                                <tr>
                                                    <td>
                                                        <%= review.firstname %>
                                                            <%= review.lastname %>
                                                    </td>
                                                    <td><a href="/admin/ViewProduct/<%=review.item_id%>">
                                                            <%= review.name %>
                                                        </a></td>
                                                    <td>
                                                        <%= review.rating %>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <div class="dropdown">
                                                                <button
                                                                    class="btn btn-<%=review.status == 1 ? 'success' : 'danger' %> btn-sm dropdown-toggle me-1"
                                                                    type="button" id="dropdownMenuButton2"
                                                                    data-bs-toggle="dropdown" aria-haspopup="true"
                                                                    aria-expanded="false">
                                                                    <%=review.status==1 ? 'Enabled' : 'Disabled' %>
                                                                </button>
                                                                <div class="dropdown-menu"
                                                                    aria-labelledby="dropdownMenuButton2">
                                                                    <a class="dropdown-item"
                                                                        href="/admin/UpdateReviewStatus/<%=review._id%>/1">Enable</a>
                                                                    <a class="dropdown-item"
                                                                        href="/admin/UpdateReviewStatus/<%=review._id%>/0">Disable</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <a href="/admin/ViewProductReview/<%=review.id%>"
                                                            class="btn icon btn-primary"><i data-feather="eye"></i></a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>


                        <h1>Work in prossess................................................... :)</h1>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#category-table').DataTable({
                dom: '<"dt-top-container"<l><"dt-center-in-div"B><f>r>t<"dt-filter-spacer"f><ip>',
                buttons: ['copy', 'pdf', 'csv', 'print', 'colvis']
            });
        });
    </script>

    <%- include('../Footer.ejs')-%>