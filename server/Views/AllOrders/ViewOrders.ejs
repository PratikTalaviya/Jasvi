<%- include('../Header.ejs');-%>


    <div class="main-content container-fluid">
        <div class="page-title mb-3">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Order Invoice</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <div class="d-flex justify-content-end">
                        <a href="#" class="btn btn-secondary m-2 mt-0 mb-0"> Back</a>
                        <a href="#" class="btn icon icon-left btn-secondary"><i data-feather="printer"></i>
                            Print</a>
                    </div>
                </div>
            </div>
        </div>
        <%if (message.length> 0) {%>
            <div class="alert alert-dismissible"
                style="background:#5bc093;border-style: solid;  border-color:#55a682; border-width:1px; color: #fff;">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Message!</strong>
                <%= message %>
            </div>
            <% } %>
                <%if(error.length> 0) {%>
                    <div class="alert alert-dismissible"
                        style="background:#fd7c7c;border-style: solid;  border-color:#e64b4b; border-width:1px; color: #fff;">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        <strong>Error!</strong>
                        <%= error %>
                    </div>
                    <% } %>
                        <% for (let order of data) { %>
                            <section id="basic-vertical-layouts">
                                <div class="row match-height">
                                    <div class="col-md-12 col-sm-12 mx-auto">
                                        <div class="card">
                                            <div class="card-header"></div>
                                            <div class="card-content">
                                                <div class="row">
                                                    <div class="col-md-12 text-center">
                                                        <!-- <img src="./assets/images/logo.svg" alt="" class="img-fluid w-25 h-50"> -->
                                                        <h1><a href="/admin/AllOrders"
                                                                style="color:#55BEFF; font-weight: bold; font-size:50px">Admin</a>
                                                        </h1>
                                                    </div>
                                                    <div class="col-md-12 ms-4">
                                                        <div class="mb-2"><b>Order Details :</b></div>
                                                        <div><span>Transaction Id : </span><span>txn_<%= order.txnid %>
                                                                    </span>
                                                        </div>
                                                        <div><span>Order Id : </span><span>
                                                                <%= order.transaction_number %>
                                                            </span></div>
                                                        <div><span>Order Date : </span><span>
                                                                <%= order.date %>
                                                            </span></div>
                                                        <div><span>Payment Status : </span><span
                                                                class="badge bg-success">
                                                                <%= order.payment_status %>
                                                            </span></div>
                                                        <div><span>Payment Method : </span><span>
                                                                <%= order.payment_method %>
                                                            </span></div>
                                                    </div>
                                                </div>
                                                <div class="row" style="flex-wrap: nowrap;">
                                                    <div class="col-md-6 ms-4 mt-5">
                                                        <div class="mb-2"><b>Billing Address :</b></div>

                                                        <div><span>Name : </span><span>
                                                                <%= order.f_name%>
                                                                    <%= order.l_name%>
                                                            </span></div>
                                                        <div><span>Email : </mailto:span><span>
                                                                    <%= order.email %>
                                                                </span></div>
                                                        <div><span>Phone : </span><span>
                                                                <%= order.phone %>
                                                            </span></div>
                                                        <div><span>Address : </span><span>
                                                                <%= order.address_1 %>,<%= order.address_2 %>
                                                            </span></div>
                                                        <div><span>Country : </span><span>
                                                                <%= order.country %>
                                                            </span></div>
                                                        <div><span>Zip : </span><span>
                                                                <%= order.zip_code %>
                                                            </span></div>
                                                    </div>
                                                    <div class="col-md-6 ms-4 mt-5">
                                                        <div class="mb-2"><b>Shipping Address :</b></div>
                                                        <div><span>Name : </span><span>
                                                                <%= order.f_name%>
                                                                    <%= order.l_name%>
                                                            </span></div>
                                                        <div><span>Email : </mailto:span><span>
                                                                    <%= order.email %>
                                                                </span></div>
                                                        <div><span>Phone : </span><span>
                                                                <%= order.phone %>
                                                            </span></div>
                                                        <div><span>Address : </span><span>
                                                                <%= order.address_1 %>,<%= order.address_2 %>
                                                            </span></div>
                                                        <div><span>Country : </span><span>
                                                                <%= order.country %>
                                                            </span></div>
                                                        <div><span>Zip : </span><span>
                                                                <%= order.zip_code %>
                                                            </span></div>
                                                    </div>

                                                </div>

                                                <div class="table-responsive mb-4">
                                                    <table class="table">
                                                        <thead>
                                                            <th>Products</th>
                                                            <th>Attribute</th>
                                                            <th>Quantity</th>
                                                            <th>Price</th>
                                                        </thead>
                                                        <tbody>
                                                           
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <% } %>
    </div>


    <%- include('../Footer')-%>