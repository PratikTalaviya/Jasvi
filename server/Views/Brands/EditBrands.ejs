<%- include('../Header.ejs');-%>

<div class="main-content container-fluid">
    <div class="page-title mb-3">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Edit Brand</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <div class="d-flex justify-content-end">
                    <a href="/Brands" class="btn btn-secondary"> Back</a>
                </div>
            </div>
        </div>
    </div>
    <section id="basic-vertical-layouts">
        <div class="row match-height">
            <div class="col-md-12 col-sm-12 mx-auto">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <% for (let item of data) { %>
                            <form class="form form-vertical" action="/EditBrandsAction/<%=item.id%>" method="POST" enctype="multipart/form-data">
                                <%if (message.length > 0) {%>
                                    <div class="alert alert-dismissible" style="background:#5bc093;border-style: solid;  border-color:#55a682; border-width:1px; color: #fff;">
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        <strong>Message!</strong> <%= message %>
                                    </div>
                                <% } %>
                                <%if(error.length > 0) {%>
                                    <div class="alert alert-dismissible" style="background:#fd7c7c;border-style: solid;  border-color:#e64b4b; border-width:1px; color: #fff;">
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        <strong>Error!</strong> <%= error %>
                                    </div>
                                <% } %>	
                                <div class="form-body">
                                    <div class="row flex-column align-content-around">
                                        <div class="col-4">
                                            <div class="form-group">
                                                <h6>Set Images</h6>
                                                <div class="preview-zone">
                                                    <div class="box box-solid">
                                                        <div class="box-body">
                                                            <img src="<%= item.photo ? '/assets/BrandImage/'+item.photo : 'https://geniusdevs.com/codecanyon/omnimart40/assets/images/placeholder.png' %>"
                                                                alt="" width="200">
                                                        </div>
                                                    </div>
                                                    <br>
                                                </div>
                                                <div class="input-group mb-3 dropzone-wrapper">
                                                    <input type="file" class="form-control bg-white dropzone" id="inputGroupFile02" name="brand_photo" placeholder="choose images">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="first-name-vertical">Name</label>
                                                <input type="text" id="first-name-vertical"
                                                    class="form-control" name="name" value="<%= item.name %>"
                                                    placeholder="Enter Name">
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto">
                                            <div class="form-group">
                                                <label for="email-id-vertical">Slug</label>
                                                <input type="text" id="email-id-vertical"
                                                    class="form-control" name="slug" value="<%= item.slug %>"
                                                    placeholder="Enter Slug">
                                            </div>
                                        </div>
                                        <div class="col-12 mx-auto d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


<%- include('../Footer')-%>